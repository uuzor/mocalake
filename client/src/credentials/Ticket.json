{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Event Ticket Credential",
  "title": "TicketCredential",
  "type": "object",
  "$metadata": {
    "uris": {
      "jsonLdContext": "https://credential-moca.api.sandbox.air3.com/dstorage/download/c21ps050vzqff02u7001UE"
    },
    "type": "Credential",
    "version": "1.0"
  },
  "properties": {
    "subjectPosition": {
      "type": "string",
      "enum": ["none", "index", "value"]
    },
    "credentialSchema": {
      "type": "object",
      "properties": {
        "id": {
          "format": "uri",
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      },
      "required": ["id", "type"]
    },
    "credentialSubject": {
      "title": "Credential subject",
      "type": "object",
      "properties": {
        "venue": {
          "description": "Event venue name and location",
          "type": "string",
          "title": "Venue"
        },
        "purchaseTimestamp": {
          "format": "date",
          "description": "When the ticket was originally purchased",
          "type": "string",
          "title": "Purchase Timestamp"
        },
        "ticketType": {
          "description": "Type of ticket access level",
          "type": "string",
          "title": "Ticket Type",
          "enum": ["general", "vip", "backstage", "premium", "early_access"]
        },
        "purchasePrice": {
          "description": "Original purchase price in specified currency",
          "type": "string",
          "title": "Purchase Price"
        },
        "isUsed": {
          "description": "Whether the ticket has been used for event entry",
          "type": "boolean",
          "title": "Is Used"
        },
        "maxResalePrice": {
          "description": "Maximum allowed resale price for anti-scalping protection",
          "type": "string",
          "title": "Maximum Resale Price"
        },
        "eventName": {
          "description": "Name of the event",
          "type": "string",
          "title": "Event Name"
        },
        "validUntil": {
          "format": "date",
          "description": "Expiration timestamp for ticket validity",
          "type": "string",
          "title": "Valid Until"
        },
        "artistName": {
          "description": "Primary artist or performer",
          "type": "string",
          "title": "Artist Name"
        },
        "id": {
          "format": "uri",
          "title": "Credential subject ID",
          "type": "string"
        },
        "seatInfo": {
          "description": "Seat number, section, or standing area information",
          "type": "string",
          "title": "Seat Information"
        },
        "originalBuyer": {
          "description": "DID of the original ticket purchaser",
          "type": "string",
          "title": "Original Buyer"
        },
        "transaferable": {
          "description": "Whether this ticket can be transferred or resold",
          "type": "boolean",
          "title": "Transaferable"
        },
        "ticketId": {
          "description": "Unique ticket identifier",
          "type": "string",
          "title": "Ticket ID"
        },
        "eventDate": {
          "format": "date",
          "description": "ate and time of the event",
          "type": "string",
          "title": "Event Date"
        }
      },
      "required": [
        "ticketId",
        "eventName",
        "artistName",
        "eventDate",
        "venue",
        "ticketType",
        "originalBuyer",
        "transaferable",
        "id"
      ]
    },
    "type": {
      "type": ["string", "array"],
      "items": {
        "type": "string"
      }
    },
    "@context": {
      "type": ["string", "array", "object"]
    },
    "version": {
      "type": "integer"
    },
    "issuer": {
      "format": "uri",
      "type": ["string", "object"],
      "properties": {
        "id": {
          "format": "uri",
          "type": "string"
        }
      },
      "required": ["id"]
    },
    "issuanceDate": {
      "format": "date-time",
      "type": "string"
    },
    "updatable": {
      "type": "boolean"
    },
    "revNonce": {
      "type": "integer"
    },
    "id": {
      "type": "string"
    },
    "merklizationRootPosition": {
      "type": "string",
      "enum": ["none", "index", "value"]
    },
    "expirationDate": {
      "format": "date-time",
      "type": "string"
    }
  },
  "required": [
    "@context",
    "id",
    "type",
    "issuanceDate",
    "credentialSubject",
    "credentialSchema",
    "credentialStatus",
    "issuer"
  ]
}
