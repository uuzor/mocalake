{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "FansOnly",
  "title": "FanCredential",
  "type": "object",
  "$metadata": {
    "uris": {
      "jsonLdContext": "https://credential-moca.api.sandbox.air3.com/dstorage/download/c21ps050vl1y102s4547n7"
    },
    "type": "Credential",
    "version": "1.0"
  },
  "properties": {
    "subjectPosition": {
      "type": "string",
      "enum": ["none", "index", "value"]
    },
    "credentialSchema": {
      "type": "object",
      "properties": {
        "id": {
          "format": "uri",
          "type": "string"
        },
        "type": {
          "type": "string"
        }
      },
      "required": ["id", "type"]
    },
    "credentialSubject": {
      "title": "Credential subject",
      "type": "object",
      "properties": {
        "memberSince": {
          "format": "date",
          "description": "Date when fan verification was first established",
          "type": "string",
          "title": "Member Since"
        },
        "fanTier": {
          "description": "Fan status tier based on engagement and verification",
          "type": "string",
          "title": "Fan Tier",
          "enum": ["casual", "verified", "superfan", "vip"]
        },
        "attendanceCount": {
          "description": "Number of verified event attendances",
          "type": "integer",
          "title": "Attendance Count"
        },
        "fanId": {
          "description": "Unique fan identifier across MocaLake platform",
          "type": "string",
          "title": "Unique Fan Identifier"
        },
        "verificationLevel": {
          "description": "Level of identity verification completed",
          "type": "string",
          "title": "Verification Level",
          "enum": ["basic", "kyc_verified", "premium"]
        },
        "reputation": {
          "maximum": 1000,
          "description": "Reputation score based on positive fan behavior",
          "type": "integer",
          "title": "Reputation Score",
          "minimum": 0
        },
        "artistName": {
          "description": "Name of the artist this fan credential is for",
          "type": "string",
          "title": "Artist Name"
        },
        "lastActivity": {
          "format": "date",
          "description": "Timestamp of last fan activity or credential update",
          "type": "string",
          "title": "Last Activity"
        },
        "id": {
          "format": "uri",
          "title": "Credential subject ID",
          "type": "string"
        },
        "spendingTier": {
          "description": "Spending tier for privacy-preserving financial verification",
          "type": "string",
          "title": "Spending Tier",
          "enum": ["$0-100", "$100-500", "$500-1000", "$1000-5000", "$5000+"]
        }
      },
      "required": ["fanId", "artistName", "fanTier", "attendanceCount", "id"]
    },
    "type": {
      "type": ["string", "array"],
      "items": {
        "type": "string"
      }
    },
    "@context": {
      "type": ["string", "array", "object"]
    },
    "version": {
      "type": "integer"
    },
    "issuer": {
      "format": "uri",
      "type": ["string", "object"],
      "properties": {
        "id": {
          "format": "uri",
          "type": "string"
        }
      },
      "required": ["id"]
    },
    "issuanceDate": {
      "format": "date-time",
      "type": "string"
    },
    "updatable": {
      "type": "boolean"
    },
    "revNonce": {
      "type": "integer"
    },
    "id": {
      "type": "string"
    },
    "merklizationRootPosition": {
      "type": "string",
      "enum": ["none", "index", "value"]
    },
    "expirationDate": {
      "format": "date-time",
      "type": "string"
    }
  },
  "required": [
    "@context",
    "id",
    "type",
    "issuanceDate",
    "credentialSubject",
    "credentialSchema",
    "credentialStatus",
    "issuer"
  ]
}
